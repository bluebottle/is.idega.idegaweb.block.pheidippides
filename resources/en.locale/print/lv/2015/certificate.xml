<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document
	PUBLIC "-//UJAC.org//Print Document//EN" 
	"http://ujac.sourceforge.net/ujac-print-document.dtd">

<document size="A4" margin-left="0" margin-right="0" margin-top="0" margin-bottom="0">
	<register-font family="antiqua" source="antiqua.ttf"/>

	<color-def name="black" color-space="RGB" value="0,0,0"/>
    <color-def name="silver" color-space="RGB" value="192,192,192"/>

    <font-def name="header" color="silver" family="antiqua" size="39.25" style="normal"/>
    <font-def name="text" color="black" family="antiqua" size="17.26" style="normal"/>
    
	<overlay source="lv/2015/Laugavegur_vidurk_2015.pdf" margin-top="0" margin-bottom="0" margin-left="0" margin-right="0" x="0" y="0" />

	<box x="25" y="150" width="580" valign="top" height="260" padding="10.0">
		<paragraph font="header" halign="center" spacing-after="12.0">
			${name}
		</paragraph>

		<paragraph font="text" halign="center" spacing-after="6.0">
			completed a 55 km Ultra Marathon with the following results
		</paragraph>
		
		<paragraph font="text" halign="center" spacing-after="6.0">
			Finish time: ${finishTime}
		</paragraph>

		<paragraph font="text" halign="center" spacing-after="6.0">
			${placement}. place of 361 finishers
		</paragraph>

		<paragraph font="text" halign="center" spacing-after="6.0">
			Placement ${genderPlacement} by gender, 249 male and 112 female runners
		</paragraph>

		<paragraph font="text" halign="center" spacing-after="6.0">
			Place  ${groupPlacement} in the age group ${ageGroup} ${gender}
		</paragraph>
	</box>	
</document>
